<Window x:Class="Magnit_app.Views.Windows.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magnit_app.Views.Windows"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="300" Width="800">
    <Grid>
        <DockPanel VerticalAlignment="Center">
            <DockPanel DockPanel.Dock="Top" Margin="10 5">
                <TextBlock Text="Выберите работника: " FontSize="16" FontWeight="Bold"/>
                <ComboBox Name="CbWorker"  FontSize="16" DisplayMemberPath="FullName"/>
            </DockPanel>
            <DockPanel DockPanel.Dock="Top" Margin="10 5">
                <TextBlock Text="Введите описание задачи: " FontSize="16" FontWeight="Bold"/>
                <TextBox Name="TbTextOfTask"  FontSize="16" MaxLines="4" Height="100"/>
            </DockPanel>
            <Button Content="Сохранить" Name="BtnSave" Click="BtnSave_Click" FontSize="16" FontWeight="Bold" Margin="10 5"/>
        </DockPanel>
    </Grid>
</Window>
